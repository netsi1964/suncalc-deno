{
  "tasks": {
    "start": "deno run --allow-net --allow-read main.ts",
    "dev": "deno run --allow-net --allow-read --watch main.ts",
    "test": "deno test --allow-net --allow-read --allow-run --allow-env --allow-sys tests/",
    "test:ui": "deno test --allow-net --allow-read --allow-run --allow-env --allow-sys --headed tests/",
    "test:debug": "deno test --allow-net --allow-read --allow-run --allow-env --allow-sys --inspect-brk tests/"
  },
  "compilerOptions": {
    "lib": ["deno.window", "dom"]
  }
}
